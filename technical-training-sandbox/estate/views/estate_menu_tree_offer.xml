<odoo>
    <data>    
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree decoration-success="status=='accepted'" decoration-danger="status=='refused'" string="Estate Data Offer" editable="bottom">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity" string="Validity (days)"/>
                <field name="date_deadline"/>
                <button name="action_set_accept" type="object" string="Yes" icon="fa-check" attrs="{'invisible': ['|',('status', '=', 'refused'),('status', '=', 'accepted')]}"/>
                <button name="action_set_refuse" type="object" string="No" icon="fa-close" attrs="{'invisible': ['|',('status', '=', 'refused'),('status', '=', 'accepted')]}"/>
                <field name="status" invisible='1'/>
                <!-- <field name="property_id"/> -->
            </tree>

        </field>
    </record>
    </data>
</odoo>