<odoo>
    <data>    
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Test">
                <field name="name"/> 
                <!-- if you comment the name field, this will not appear -->
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" string="Living area (sqm)" filter_domain="['|',('living_area', '=', self),('living_area', '>', self)]"/>
                <field name="facades"/>
                <separator/>
                <filter string="Available" name="state" domain="[('state', 'in', ['new', 'offer received'])]"/>
                
                <!-- fix this issue -->

                <group expand="1" string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}"/>
                </group>

                <!--  <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Provider" name="provider" context="{'group_by':'delivery_type', 'residual_visible':True}"/>
                </group> -->

            </search>

        </field>
    </record>
    </data>
</odoo>           
