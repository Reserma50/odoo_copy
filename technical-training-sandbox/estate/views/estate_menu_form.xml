<odoo>
    <data>
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate Property Form Test">
                    <header>
                        
                        <button name="action_set_sold" type="object" string="SOLD"/>
                        <button name="action_set_cancel" type="object" string="CANCEL"/>
                        <!-- VALIDAR ACCIONES AL FINAL DEL TUT10 -->
                    </header>
                    <sheet>

                        <group>
                            <field name="name" string="Title" />
                            <field name="tag_ids" widget="many2many_tags"/>
                            
                            <group>
                                <field name="state" />
                                <field name="property_type_id" string="Property Type" related="property_type_id.name"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_price"/>
                                <field name="selling_price"/>
                                

                            </group>
                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description" string="Description"/>
                                        <field name="bedrooms" string="Bedrooms"/>
                                        <field name="living_area" string="Living Area (sqm)"/>
                                        <field name="facades" string="Facades"/>
                                        <field name="garage" string="Garage" />
                                        <field name="garden" string="Garden"/>
                                        <field name="garden_area" string=" Garden Area (sqm)"/>
                                        <field name="garden_orientation" string="Garden Orientation"/>
                                        <field name="total_area" string="Area total"/>
                                        <field name="active" />

                                    </group>
                                </page>
                               <page string="Offers">
                                    
                                        
                                        <field name="offer_ids">
                                            <tree> 
                                                <!-- https://www.odoo.com/documentation/16.0/developer/tutorials/getting_started/12_sprinkles.html -->
                                                <field name="property_id.name"/>
                                                <field name="field_2"/>
                                            </tree>
                                        </field>

                                    
                               </page>

                                <page string="Other info">
                                    <group>
                                        <field name="seller_id" string="Salesman" related="seller_id.name"/>
                                        <field name="buyer_id" string="Buyer" related="buyer_id.name"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>  
            </field>
        </record>
    </data>
</odoo>
