<odoo>
  <data>
    <!-- Formulario -->
    <record id="period_lock_form" model="ir.ui.view">
      <field name="name">period.lock.form</field>
      <field name="model">period.lock</field>
      <field name="arch" type="xml">
        <form string="Account Period Lock">
          <header>
            <button name="period_set_lock" string="Lock Period" class="oe_highlight" type="object" states="draft,unlock"/>
            <button name="period_set_draft" string="Reset to Draft" class="oe_highlight" type="object" states="lock,unlock"/>
            <button name="period_set_unlock" string="Unlock Period" class="oe_highlight" type="object" states="lock"/>
            <field name="state" widget="statusbar" status_visible="draft,lock,unlock"/>
          </header>
          <sheet>
            <div class="oe_title">
              <label for="name" string="Period Lock Title"/>
              <h1>
                <field readonly="0" name="name" class="oe_inline" required="1"/>
              </h1>
            </div>
            <group>
              <group>
                <field name="from_date"/>
                <field name="journal_ids" widget="many2many_tags"/>
              </group>
              <group>
                <field name="to_date"/>
                <field name="company_ids" widget="many2many_tags"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="period_lock_tree">
      <field name="name">period.lock.tree</field>
      <field name="model">period.lock</field>
      <field name="arch" type="xml">
        <tree string="Account Period Lock">
          <field name="from_date"/>
          <field name="to_date"/>
          <field name="journal_ids" widget="many2many_tags"/>
          <field name="company_ids" widget="many2many_tags"/>
          <field name="state"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="period_lock.action_window">
      <field name="name">Account Period Lock Window</field>
      <field name="res_model">period.lock</field>
      <field name="view_mode">tree,form</field>
      <field name="target">current</field>
    </record>


