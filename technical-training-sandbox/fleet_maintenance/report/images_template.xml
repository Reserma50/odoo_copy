<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<template id="report_car_images">
    <t t-foreach="docs" t-as="vehicle">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page text-center" style="width:75%; hight:50%">
                    <h2 class="">
                        <span  t-if="vehicle.name" t-field="vehicle.name"/>
                    </h2>
                    <div class="row">
                        <div class="col-6 justify-content-center">
                            <img class="mx-auto d-block" t-if="vehicle.last_image_front" t-att-src="image_data_uri(vehicle.last_image_front)" style="width:90%" alt="vehicle front"/>
                        </div>
                        <div class="col-6 justify-content-center">
                            <img class="mx-auto d-block" t-if="vehicle.last_image_back" t-att-src="image_data_uri(vehicle.last_image_back)" style="width:90%" alt="vehicle back"/>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6 justify-content-center">
                            <img class="mx-auto d-block" t-if="vehicle.last_image_lefth_side" t-att-src="image_data_uri(vehicle.last_image_lefth_side)" style="width:90%" alt="vehicle left side"/>
                        </div>
                        <div class="col-6 justify-content-center">
                            <img class="mx-auto d-block" t-if="vehicle.last_image_right_side" t-att-src="image_data_uri(vehicle.last_image_right_side)" style="width:90%" alt="vehicle right side"/>
                        </div>
                    </div>
                    
                    <div class="row justify-content-center">
                        <img class="mx-auto d-block" t-if="vehicle.last_image_front" t-att-src="image_data_uri(vehicle.last_image_front)" style="width:50%" alt="TANQUE DE COMBUSTIBLE"/>
                    </div>
                </div>
            </t>
        </t>
    </t>

</template>
</odoo>