<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fleet_vehicle_image_form" model="ir.ui.view">
            <field name="name">fleet.vehicle.view.inherit.tree</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
            <field name="arch" type="xml">
                
                <xpath expr="//notebook[1]" position="before">
                    <group col="2" string="Combustible"   name="fuel">
                        <group>
                            <field name="last_image_fuel_level"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//group[1]" position="after">
                    <group col="2" string="Imagenes"   name="image">
                        <group>
                            <field name="last_image_front"/>
                            <field name="last_image_back"/>
                        </group>
                        <group >
                            <field name="last_image_right_side"/>
                            <field name="last_image_lefth_side"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//button[@name='action_accept_driver_change']" position="after">
                    <widget name="signature" string="Firmar" highlight="1" full_name="driver_id"/>
                </xpath>
                <!-- 
                <xpath expr="//button[@name='action_open_employee']" position="after">
                    <widget name="signature" string="Firmar" highlight="1" full_name="driver_id"/>
                </xpath> 
                -->
                

                <xpath expr="//field[@name='location']" position="after">
                    <field name="renovation_date" />
                    <field name="expiration_date" />
                </xpath>

            </field>
        </record>
    </data>
</odoo>