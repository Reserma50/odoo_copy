    <record id="fleet_vehicle_log_maintenance_view_activity" model="ir.ui.view">
        <field name="name">fleet.vehicle.log.maintenance.activity</field>
        <field name="model">fleet.vehicle.log.maintenance</field>
        <field name="arch" type="xml">
            <activity string="Vehicles Maintenances">
                <field name="driver_id"/>
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('res.partner', 'avatar_128', record.driver_id.raw_value)" t-att-title="record.driver_id.value" t-att-alt="record.driver_id.value"/>
                        <div>
                            <field name="vehicle_id" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <record id='fleet_vehicle_log_maintenance_action' model='ir.actions.act_window'>
        <field name="name">Maintenances</field>
        <field name="res_model">fleet.vehicle.log.maintenance</field>
        <field name="view_mode">tree,form,activity</field>
        <!-- <field name="context">{'search_default_groupby_service_type_id': 1}</field> -->
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new maintenance entry
          </p><p>
            Track all the maintenance done on your vehicle.
            Maintenances can be of many types: occasional repair, fixed maintenance, etc.
          </p>
        </field>
    </record>

    <menuitem name="Maintenances" action="fleet_vehicle_log_maintenance_action" parent="fleet.fleet_vehicles" id="fleet_vehicle_log_maintenance_menu" sequence="5"/>

</odoo>