<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='fleet_vehicle_log_maintenance_view_form' model='ir.ui.view'>
        <field name="name">fleet.vehicle.log_maintenance.form</field>
        <field name="model">fleet.vehicle.log.maintenance</field>
        <field name="arch" type="xml">
            <form string="Maintenance logs">
                <field name="vehicle_id" invisible="1"/>
                <header>
                    <!-- <button name="action_open" states="futur" type="object" string="Start Contract" class="oe_highlight" groups="fleet.fleet_group_manager"/>
                    <button name="action_close" states="futur" type="object" string="Cancel" groups="fleet.fleet_group_manager"/>
                    <button name="action_close" states="open,expired,futur" type="object" string="Close Contract" groups="fleet.fleet_group_manager"/>
                    <button name="action_draft" states="closed" type="object" string="Reset To Draft" groups="fleet.fleet_group_manager"/> -->
                    <field name="service_state" widget="statusbar" />
                </header>
                <sheet>
                    <!-- <field name="active" invisible="1"/> -->
                    <!-- <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/> -->
                    <!-- <field name="currency_id" invisible="1"/> -->
                    <div class="oe_title">
                        <!-- <h1><field name="service_type_id" related="service_type_id.name" /></h1> -->
                    </div>
                    <group string="Information" col="2">
                        <group>
                            <field name="description"/>
                            <field name="service_id" related="service_id.stage"/>
                            <field name="odometer_id" related="odometer_id.value"/>
                        </group>
                        <group>
                            <field name="service_id" label="Fecha de creación:" related="service_id.create_date" />
                            <field name="kms_next_estimate" label="Próximo mantenimiento:"  />
                            <field name="kms_left" />
                            <field name="do_today"/>
                            <field name="odometer"/>
                        </group>
                    </group>
                    <separator string="Vehicle"/>
                    <group col="2">
                        <group col="1">
                            <field name="vehicle_id" related="vehicle_id.name"/>
                        </group>
                        <group col="2">
                            <field name="driver_id" related="driver_id.name"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <!-- <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/> -->
                </div>
            </form>
        </field>
    </record>

    <record id='fleet_vehicle_log_maintenance_view_tree' model='ir.ui.view'>
        <field name="name">fleet.vehicle.log.maintenance.tree</field>
        <field name="model">fleet.vehicle.log.maintenance</field>
        <field name="arch" type="xml">
            <tree decoration-success="state_maintenance == 'open'" decoration-danger="state_maintenance == 'expired'" string="Maintenance logs">
                <!-- <field name="active" invisible="1"/> -->
                <field name="do_today" invisible="1"/>
                <!-- <field name="name" class="fw-bold" /> -->
                <!-- <field name="start_date" /> -->
                <field name="kms_next_estimate" string="Próximo Mantenimiento" />
                <field name="kms_left" />
                <field name="vehicle_id"/>
                <!-- <field name="insurer_id" /> -->
                <!-- <field name="vehicle_id.odometer" string="Kilometraje actual"/> -->
                <field name="service_id" />
                <field name="driver_id" widget="many2one_avatar"/>
                <!-- <field name="cost_generated" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
                <field name="cost_frequency"/> -->
                <field name="state_maintenance" widget="badge" decoration-info="state_maintenance == 'open'" decoration-danger="state_maintenance == 'expired'" />
                <!-- <field name="activity_exception_decoration" widget="activity_exception"/> -->
            </tree>
        </field>
    </record>
