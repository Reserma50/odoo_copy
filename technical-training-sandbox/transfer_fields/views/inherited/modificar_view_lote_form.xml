<odoo>
    <data>
        <record id="view_production_lot_form" model="ir.ui.view">
            <field name="name">inherited.model.form.inherit.test.lot</field>
            <field name="model">stock.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">

                <!-- Add pages -->
                 
                <xpath expr="/form[1]/sheet[1]/div[2]/h1" position="after">
                    <widget name="web_ribbon" title="Fuera de Contrato" bg_color="bg-danger" attrs="{'invisible': [('en_contrato', '=', True)]}"/>  
                </xpath>
                <!-- Hide internal Reference -->
                 <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="attrs">{'invisible': [('modalidad_encar', '!=', False)]}</attribute>
                 </xpath>
                 <!-- <xpath expr="//field[@name='fecha_vencimiento_lote_serie']" position="attributes">
                    <attribute name="attrs">{'invisible': [('modalidad_encar', '!=', False)]}</attribute>
                 </xpath>
                 <xpath expr="//field[@name='fecha_fabricacion_lote_serie']" position="attributes">
                    <attribute name="attrs">{'invisible': [('modalidad_encar', '!=', False)]}</attribute>
                 </xpath> -->

                 <xpath expr="//field[@name='ref']" position="after">
                    <!-- <group string="Datos de Ubicación">
                        <group> -->
                            
                            <field name="my_last_location"/>
                            <field name="loc_institution_id"/>
                            <field name="ip_field"/>
                            
                            
                        <!-- </group>
                    </group> -->
                 </xpath>
                

                <xpath expr="/form[1]/sheet[1]/notebook[1]/page[@name='description']" position="after">
                        <page string="Contacto" name="contact">
                            <group>
                                <field name="thepartner_id" string="Último Cliente" optional="hide"/>
                                <field name="lot_id" string="Equipo Principal"/>
                            </group>
                        </page>
                        <page string="Datos Madre" name="other_information">
                            <group name="First Info">
                                <group string="Ticket">
                                    <field name="ficha"/>
                                    <field name="state_equipment" options="{'no_create': True}"/>
                                    <field name="modalidad_encar" options="{'no_create': True}"/>
                                    <field name="install_date" options="{'no_create': True}"/>
                                    <field name="contact" options="{'no_create': True}"/>
                                    <field name="tel_contact" options="{'no_create': True}"/>

                                </group>
                                <group string="Compras">
                                    <group>
                                        <field name="garantia_fab_inicio"></field>
                                        
                                        <field name="garantia_fab"></field>
                                        <field name="garantia_fab_fin"></field>
                                        <br></br>
                                        <field name="gar_extend"></field>
                                        <field name="vencimiento_gar_extend"></field>
                                        <field name="pedido"></field>
                                        <field name="en_contrato"/>
                                        
                                    </group>
                                    <!-- <group> -->
                                        <!-- <field name="gar_extend"></field>
                                        <field name="vencimiento_gar_extend"></field>
                                        <field name="pedido"></field>
                                        <field name="en_contrato"/> -->

                                    <!-- </group> -->
                                    
                                </group>

                            </group>
                            <group name="Second Info">
                                <group string="Ventas">
                                    <field name="gar_cliente"/>
                                    <field name="fin_gar_cliente"/>
    
                                </group>
                            </group>

                                
                                
                                <!-- <group string="Ventas/Contrato"> -->
                                    <h4 class="mt-2">Ordenenes de compra / Contrato</h4>
                                    <field name="sale_ids">
                                        <tree string="Ventas/Contratos relacionados">
                                            <field name="name"/>
                                            <!-- NAME = S00{ID}  -->
                                            <field name="partner_id" string="Cliente"/>
                                            <!-- <field name="is_suscription" string="Es suscripción?"/> -->
                                            
                                            <field name="warranty_duration" string="Garantia"/>
                                            <field name="contract_oc"/>
                                            <field name="inicio_contrato"/>
                                            <field name="frecuencia"/>
                                        </tree>
                                    </field>
                                    <h4>Equipos relacionados</h4>
                                    <field name="child_lot_ids">
                                        <tree string="Equipment">
                                            <field name="name"/>
                                            <field name="ref"/>
                                            <field name="product_id"/>
                                        </tree>
                                    </field>
                                    <!-- <field name="sale_id" options="{'no_create': True}"/> -->
                                    <!-- Descomentar -->
                                    <!-- <field name="cliente_id_rl"/> -->
                                    <!-- <field name="garantia_rl" options="{'no_create': True}"/> -->
                                    <!-- <field name="contrat_oc_rl" options="{'no_create': True}"/> -->
                                    <!-- <field name="fecha_contrato_rl" options="{'no_create': True}"/> -->
                                    <!-- <field name="frecuencia_rl" options="{'no_create': True}"/> -->
                                    <!-- <field name="contrato_old_rl" options="{'no_create': True}"/> -->

                                    <!-- Add ids from sale_order -->
                                    <h4>Periféricos</h4>
                                    <field name="periferico_ids"/>
                                    <h4>Tickets relacionados</h4>
                                    <field name="mytickets_ids">

                                    </field>
                                    


                                <!-- </group> -->
                        </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>