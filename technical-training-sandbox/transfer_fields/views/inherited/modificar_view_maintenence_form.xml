<odoo>
    <data>
        <record id="hr_equipment_request_view_form" model="ir.ui.view">
            <field name="name">inherited.model.form.inherit.test.maintenance</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_form"/>
            <field name="arch" type="xml">
                <!-- add manytomany field to lote form -->
                <xpath expr="//field[@name='maintenance_type']" position="after">
                    <field name="partner_id" options="{'no_create': True}"/>
                    <field name="sale_id" options="{'no_create': True}"/>
                    <field name="locationmain_id" options="{'no_create': True}"/>
                    <field name="nf_product_id" options="{'no_create': True}"/>  
                    <field name="nf_lot_id" options="{'no_create': True}"/>  
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="tecnicos_ids" widget="many2many_tags" options="{'no_create': True}"/>

                </xpath>
                <!-- Add pages -->
                <xpath expr="/form[1]/sheet[1]/group[2]" position="after">
                    <notebook>
                        <page string="Products Location" name="product_location">
                            <!-- <tree string="Tests"> -->
                                <!-- <field name="quants_modificado_id" context="{'tree_view_ref': 'stock.view_stock_quant_tree_editable'}">
                                
                                </field> -->
                            <!-- </tree> -->
                            <field name="quants_ids_rl">
                                <tree string="Productos Ubicados">
                                    <field name="region_rl"/>
                                    <field name="tipo_rl"/>
                                    <field name="product_id"/>
                                    <field name="lot_id" />
                                    <field name="marca_rl" optional="hide"/>
                                    <field name="modelo_rl" optionla="hide"/>
                                    <field name="ficha_rl" optional="hide"/>
                                    <field name="cliente_rl"/>
                                    <field name="install_rl"/>
                                    <!-- <field name="cliente_lot_rl"/>
                                    <field name="contrato_oc_rl"/> -->
                                    <!-- Contart is not in stock.quant model -->
                                    <!-- <button name="action_get_attachment_view" string="Adjuntos" type="object" icon="fa-paperclip"/> -->
                                    <button string="Generar Ticket" type="object" name="open_form_action" class="oe_highlight" context="{'partner_id':cliente_rl,'Lot_id': lot_id}"/>
                                    <button string="Ver detalles" type="object" name="open_form_action"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info" name="other_information">

                        </page>
                        
                    </notebook>
                </xpath>
            </field>
        </record>

        <menuitem
            name="Product Modality"
            sequence="4"
            id="menu_maintenance_product_modalidad_configuration"
            parent="maintenance.menu_maintenance_configuration"
            action="transfer_fields.action_window"
            groups="base.group_user"/>
        
        <menuitem
            name="Product Locations"
            sequence="5"
            id="menu_maintenance_product_location_configuration"
            parent="maintenance.menu_maintenance_configuration"
            action="location_fields_action_window"
            groups="base.group_no_one"/>
      
        <menuitem
            name="Product Marca"
            sequence="6"
            id="menu_maintenance_product_marca_configuration"
            parent="maintenance.menu_maintenance_configuration"
            action="marcaftk_fields_action_window"
            groups="base.group_no_one"/>
        
        <!-- <menuitem
            id="menu_product_form2"
            name="Products"
            parent="maintenance.menu_maintenance_title"
            action="mrp_product_variant_action"
            sequence="3"/> -->
    </data>
</odoo>