<odoo>
    <data>
        <record id="view_order_form_modificado" model="ir.ui.view">
            <field name="name">inherited.model.form.inherit.test.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- add manytomany field to lote form -->
                <xpath expr="/form/sheet/notebook/page[@name='myannex']" position="after">

                    <page string="Datos de Contrato" name="contrac">
                        <group>
                            <group>
                                <field name="contract_oc"/>
                                <field name="inicio_contrato"/>
                                <field name="fin_contrato"/>
                                <field name="observacion"/>
                            </group>
                            <group>
                                <field name="frecuencia"/>
                                <field name="response_time"/>
                                <field name="is_suscription" widget="boolean_button"/>
                                <field name="contrato_old"/>
                            </group>
                        </group>
                    </page>
                    <page string="Lote/Serie Relacionados" name="lote_serie">
                        <group>
                            <field name="serie_ids" string=" ">
                                <tree>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="ficha"/>
                                    <!-- <field name="garantia_fab" optional="show"/> -->
                                    <field name="garantia_fab_inicio" optional="show"/>
                                    <field name="garantia_fab_fin" optional="show"/>
                                    <!-- <field name="gar_extend" optional="show"/>
                                    <field name="vencimiento_gar_extend" optional="show"/> -->
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Ticket de Instalación" name="install">
                        <group>
                            <field name="ticket_install_created" />
                            <field name="fecha_prevista_install" />
                            <field name="maintenance_ids">
                                <tree>
                                    <field name="name" string="Título"/>
                                    <field name="request_date" string="Creado"/>
                                    <field name="user_id" string="Responsable"/>
                                    <field name="tecnicos_ids" string="Tecnicos Acompañante"/>
                                    <field name="maintenance_team_id" string="Tipo"/>
                                    <field name="schedule_date" string="Agendado"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="/form/header/button[@name='action_draft']" position="after">
                    <button name="action_set_install_ticket" type="object" string="Crear Ticket de Instalación" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'sale'), ('ticket_install_created', '=', True)]}" 
                    confirm = "¿Esta seguro que desea crear el ticket de instalación?"/>
                    <!-- attrs="{'invisible': ['|', '|', ('state', '=', 'sent'), ('state', '=', 'cancel'), ('ticket_install_created', '=', True)]}" -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>