<odoo>
    <data>
        <record id="view_order_form_modificado" model="ir.ui.view">
            <field name="name">inherited.model.form.inherit.test.sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- add manytomany field to lote form -->
                <xpath expr="/form/sheet/notebook/page[@name='order_lines']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/group/group[1]/field[@name='atention']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>  
                <xpath expr="/form/sheet/group/group[1]/field[@name='email']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/group/group[1]/field[@name='phone']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <!-- <xpath expr="/form/sheet/group/group[1]/field[@name='x_studio_vigencia_del_presupuesto']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath> -->
                <xpath expr="/form/sheet/group/group[1]/field[@name='sale_order_template_id']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/group/group[2]/field[@name='validity_date']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/group/group[2]/field[@name='payment_type_id']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/group/group[2]/field[@name='shipping_term']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <!-- Ocultar Grupos dentro de más información -->
                <xpath expr="/form/sheet/notebook/page[@name='other_information']/group[1]/group[@name='sale_info']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@name='other_information']/group[2]/group[@name='sale_reporting']" position="attributes">
                    <attribute name="attrs">{'invisible':[('data_export','=', True)]}</attribute>
                </xpath>
                
                <xpath expr="/form/sheet/notebook/page[@name='myannex']" position="after">

                    <page string="Datos de Contrato" name="contrac">
                        <group>
                            <group>
                                <field name="contract_oc"/>
                                <field name="inicio_contrato"/>
                                <field name="fin_contrato"/>
                                <field name="observacion"/>
                            </group>
                            <group>
                                <field name="frecuencia"/>
                                <field name="response_time"/>
                                <field name="data_export" widget="boolean_button"/>
                                <field name="garantia_global" widget="boolean_button"/>
                                
                                <field name="contrato_old"/>
                            </group>
                        </group>
                    </page>
                    <page string="Lote/Serie Relacionados" name="lote_serie">
                        <group>
                            <field name="serie_ids" string=" ">
                                <tree editable="top">
                                    <field name="product_id" />
                                    <field name="name" readonly="1"/>
                                    <field name="company_id" optional="hide"/>
                                    <field name="ficha"/>
                                    <!-- <field name="garantia_fab" optional="show"/> -->
                                    <field name="garantia_fab_inicio" optional="show"/>
                                    <field name="garantia_fab_fin" optional="show"/>
                                    <!-- <field name="gar_extend" optional="show"/>
                                    <field name="vencimiento_gar_extend" optional="show"/> -->
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Registros asociados" name="install">
                        <group>
                            <field name="ticket_install_created" />
                            <field name="fecha_prevista_install" />
                            <field name="maintenance_ids">
                                <tree>
                                    <field name="name" string="Título"/>
                                    <field name="request_date" string="Creado"/>
                                    <field name="user_id" string="Responsable"/>
                                    <field name="tecnicos_ids" string="Tecnicos Acompañante"/>
                                    <field name="maintenance_team_id" string="Tipo"/>
                                    <field name="schedule_date" string="Agendado"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="/form/header/button[@name='action_draft']" position="after">
                    <button name="action_set_install_ticket" type="object" string="Crear Ticket de Instalación" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'sale'), ('ticket_install_created', '=', True)]}" 
                    confirm = "¿Esta seguro que desea crear el ticket de instalación?"/>
                    <!-- attrs="{'invisible': ['|', '|', ('state', '=', 'sent'), ('state', '=', 'cancel'), ('ticket_install_created', '=', True)]}" -->
                </xpath>

                <!-- TAX IDS REQUIRED -->
                <xpath expr="/form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/form/group/group/field[@name='tax_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('qty_invoiced', '&gt;', 0)], 'required':True}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('qty_invoiced', '&gt;', 0)],  'required':True}</attribute>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/kanban/field[@name='tax_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="/form/sheet/group[@name='sale_header']/group[@name='order_details']/field[@name='warranty_duration']" position="before">
                    <field name="tipo_gar" widget="selection"/>
                </xpath>
                <!-- SALE FORM -->
                <!-- <xpath expr="/form[1]/sheet[1]" position='inside'>
                    <button name="open_maintenance_logs"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-history">
                    <field name="history_count" widget="statinfo" string="Mantenimientos"/>
                    </button>
                </xpath> -->

            </field>
        </record>
    </data>
</odoo>