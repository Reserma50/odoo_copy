    <record id="purchase_order_fields_tree" model="ir.ui.view">
        <field name="name">purchase.order.view.inherit.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']" position="after">
              <page string="Logistic" name="purchase_logistic_invoice">
                <group>
                    <group name="Condiciones">
                        <field name="delivery_conditions" />
                        <field name="envio_id"/>
                    </group>
                    <group name="Formas de Envio">
                        <field name="shipment" />
                    </group>
                </group>
            </page>
            </xpath>

            <xpath expr="//field[@name='currency_id']" position="after">
              <field name="contact_person" />
              <field name="contact_mail" />
              <field name="contact_number" />
            </xpath>

            <xpath expr="//div[@name='reminder']" position="after">
              <!-- <label for="proyect"   />
              <div name="other" class="" title="Inherited Field From Compras.">
                <field name="proyect" />
              </div> -->
              <label for="comentario"   />
              <div name="other" class="" title="Inherited Field From Compras 1.">
                
                <field name="comentario" />
              </div>
              <label for="project_id"   />
              <div name="other2" class="" title="Inherited Field From State 2.">
                
                <field name="project_id" />
              </div>
            </xpath>


            <xpath expr="//field[@name='notes']" position="before">

              <label for="descuento"   />
              <div name="other2" class="" title="%">
                <div class="row">
                  <div class="col-2">
                    <field name="descuento" />
                  </div>
                  <div class="col text-right">
                    %
                  </div>
                </div>
              </div>
            </xpath>

        </field>
    </record> 
  
