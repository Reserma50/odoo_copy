<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="external_layout_purchase_order" inherit_id="purchase.report_purchaseorder_document">
        <!-- <xpath expr="//p[@t-field='o.date_order']" position="after">  CORRECTA--> 
        <xpath expr="//div[@t-elif='o.date_order']" position="after">
            <div t-if="o.project_id" class="col-3 bm-2">
                
                <t t-if="o.partner_id.lang == 'en_US'">
                    <strong >Project:</strong>
                </t>
                <t t-if="o.partner_id.lang == 'es_MX'">
                    <strong >Proyecto:</strong>
                </t>
                
                <p t-field="o.project_id" class="m-0"/>
            </div>
        </xpath>
        <xpath expr="//div[@class='page']//div[@class='mt-4']" position="before">
            <!-- //h2[@t-elif='o.state in ['draft', 'sent', 'to approve']'] wrong -->
            <!-- <div class="mt-3 small">
                <div class="row border">
                        <div class="row text-center pb-0">
                            <span>Instructions/Instrucciones: (Please follow these Instructions / Por favor siga estas instrucciones)</span> 
                        </div>
                    <div>
                        <div class="row border">
                            <div class="col-1">
                                1
                            </div>
                            <div class="col-11">
                                Modifications, additions, suspensions or Changes in specifications or ABC Code must be received and notified to our office for authorization prior to agreed shipping date.
                            </div>
                        </div>
                    </div>
                </div>
            </div> -->
            <table class="table table-bordered mt-3">
                <!-- <caption style="text-align:center"><span>Instructions/Instrucciones: (Please follow these Instructions / Por favor siga estas instrucciones)</span> </caption> -->
                <thead>
                  <tr>
                    <th style="width:5%"></th>
                    <!-- <th>Lastname</th>-->
                    <th style="text-align:center"> 
                        <span>
                        <t t-if="o.partner_id.lang == 'en_US'">
                            Instructions: (Please follow these Instructions)
                        </t>
                        <t t-if="o.partner_id.lang == 'es_MX'">
                            Instrucciones: (Por favor siga estas instrucciones)
                        </t>
                        </span>
                    </th> 
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>1</td>
                    <td>Modifications, additions, suspensions or Changes in specifications or ABC Code must be received and notified to our office for authorization prior to agreed shipping date.</td>
                  </tr>

                </tbody>
              </table>


        </xpath>
        <!-- ENVIO -->
        <xpath expr="//div[@t-field='o.partner_id']" position="after">
            <div  class="row">
                <t t-if="o.shipment">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        Shipment:
                    </t>
                    <t t-if="o.partner_id.lang == 'es_MX'">
                        Envio:
                    </t>
                    <h6 t-field="o.shipment" class="" style="text-align:left;"/>
                </t>
            </div>
            <div  class="row">

                <t t-if="o.delivery_conditions">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        Delivery conditions: 
                    </t>
                    <t t-if="o.partner_id.lang == 'es_MX'">
                        Condiciones de envio: 
                    </t>
                    <h6 t-field="o.delivery_conditions" class="" style="text-align:left"/>
                </t>
            </div>
            <div  class="row">
                <t t-if="o.payment_term_id">
                    <t t-if="o.partner_id.lang == 'en_US'">
                        Payment contidions:
                    </t>
                    <t t-if="o.partner_id.lang == 'es_MX'">
                        Condiciones de pago: 
                    </t>
                    <h6 t-field="o.payment_term_id" class="" style="text-align:left"/>
                </t>
            </div>
            <!-- <div  t-field="o.shipment" class="m-0"/> -->
            <!-- <div t-field="o.delivery_conditions" class="m-0"/> -->
            <!-- <div t-field="o.payment_term_id" class="m-0"/> -->
        </xpath>


    </template>
</odoo>