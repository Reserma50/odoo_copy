<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
       <record model="ir.ui.view" id="crm_pendientes_view_form">
           <field name="name">crm.pendientes.form </field>
            <field name="model">crm.pendientes</field>
             <field name="arch" type="xml">
                <form string="Formulario CRM Pendientes">        
                    <sheet>
                
                <group name="" string="">
                        <field name="name"/>
                        <field name="pendiente_ids" attrs="{'invisible':1}"/>
                 
                </group>
                
                    </sheet>
                 </form>
           </field>
           
        </record>
        
        <record model="ir.ui.view" id="crm_pendientes_view_list">
              <field name="name">crm.pendientes.form </field>
            <field name="model">crm.pendientes</field>
            <field name="arch" type="xml">
                <tree string="Lista CRM">
                        <field name="name"/>
                
                </tree>
            
            </field>
            
        </record>
        
        
    </data>
    
</odoo>